<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Manager-Specific Form View -->
    <record id="view_alternative_holiday_request_manager_form" model="ir.ui.view">
        <field name="name">alternative.holiday.request.manager.form</field>
        <field name="model">alternative.holiday.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" string="Approve" type="object" class="btn-success"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="worked_date" readonly="1"/>
                        <field name="day_type" readonly="1"/>
                        <field name="reason" readonly="1"/>
                        <field name="requested_leave_date" readonly="1"/>
                        <field name="manager_comments" groups="hr.group_hr_manager"/>
                    </group>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </sheet>

            </form>
        </field>
    </record>

    <!-- Update Manager Action to Use Manager-Specific Form View -->
    <record id="action_alternative_holiday_manager_view" model="ir.actions.act_window">
        <field name="name">Requests to Approve</field>
        <field name="res_model">alternative.holiday.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'list', 'view_id': ref('view_alternative_holiday_request_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_alternative_holiday_request_manager_form')})]"/>
    </record>
</odoo>