<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_alternative_holiday_request_tree" model="ir.ui.view">
        <field name="name">alternative.holiday.request.tree</field>
        <field name="model">alternative.holiday.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="worked_date"/>
                <field name="day_type"/>
                <field name="requested_leave_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_alternative_holiday_request_form" model="ir.ui.view">
        <field name="name">alternative.holiday.request.form</field>
        <field name="model">alternative.holiday.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="worked_date"/>
                        <field name="day_type"/>
                        <field name="reason"/>
                        <field name="requested_leave_date"/>
                        <field name="state" readonly="1"/>
                        <field name="manager_comments" readonly="1"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_alternative_holiday_request" model="ir.actions.act_window">
        <field name="name">Alternative Holiday Requests</field>
        <field name="res_model">alternative.holiday.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <!-- <field name="context">{}</field> -->
    </record>
</odoo>
