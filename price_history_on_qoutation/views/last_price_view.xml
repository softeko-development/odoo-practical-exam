<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_order_form_inherit_last_price_line" model="ir.ui.view">
        <field name="name">sale.report.last.price.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add button after the price_unit field in order lines -->
            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="after">
                <button name="action_get_last_price"
                        type="object"
                        string="Last Price"
                        class="btn-link"
                        icon="fa-money"
                        invisible="not product_id"
                        help="Get last price offered to this product and customer"/>
            </xpath>
        </field>
    </record>
</odoo>