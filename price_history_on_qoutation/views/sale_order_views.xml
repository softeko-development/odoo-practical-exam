<!-- views/sale_order_views.xml -->

<odoo>
  <record id="view_order_line_form_inherit" model="ir.ui.view">
    <field name="name">sale.order.line.form.price.history</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/form" position="after">
        <field name="history_line_ids" widget="one2many_list" string="Price History">
          <tree editable="bottom">
            <field name="order_date"/>
            <field name="order_name"/>
            <field name="product_uom_qty"/>
            <field name="price_unit"/>
            <field name="salesperson_id"/>
          </tree>
        </field>
      </xpath>
    </field>
  </record>
</odoo>
