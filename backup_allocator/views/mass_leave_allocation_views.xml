<odoo>
    <record id="view_mass_leave_allocation_wizard_form" model="ir.ui.view">
        <field name="name">mass.leave.allocation.wizard.form</field>
        <field name="model">mass.leave.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Leave Allocation">
                <group>
                    <field name="leave_type_id"/>
                    <field name="number_of_days"/>
                    <field name="allocation_mode"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="allocation_reason"/>
                </group>
                <group string="Preview Employees">
                    <field name="employee_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <footer>
                    <button name="action_preview" type="object" string="Preview Employees" class="btn-secondary"/>
                    <button name="action_allocate" type="object" string="Allocate" class="btn-primary"/>
                    <button name="action_export_csv" type="object" string="Export CSV" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_leave_allocation" model="ir.actions.act_window">
        <field name="name">Mass Leave Allocator</field>
        <field name="res_model">mass.leave.allocation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_mass_leave_allocator_root" name="Mass Leave Allocator" parent="hr_holidays.menu_hr_holidays_root"/>
    <menuitem id="menu_mass_leave_allocation" name="Bulk Leave Allocation" parent="menu_mass_leave_allocator_root" action="action_mass_leave_allocation"/>
</odoo>
