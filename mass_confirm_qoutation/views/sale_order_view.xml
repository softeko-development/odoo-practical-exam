<odoo>
    <record id="view_quotation_list_with_mass_confirm" model="ir.ui.view">
        <field name="name">sale.order.list.mass.confirm</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <!-- Change the list view title -->
            <xpath expr="//list" position="attributes">
                <attribute name="string">Sales Orders</attribute>
            </xpath>
            
            <!-- Add button to existing header -->
            <xpath expr="//header" position="inside">
                <button name="action_mass_confirm"
                        string="Mass Confirm"
                        type="object"
                        class="oe_highlight"
                        groups="base.group_user"/>
            </xpath>
        </field>
    </record>
</odoo>