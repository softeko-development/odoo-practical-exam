<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_mass_confirm_wizard_form" model="ir.ui.view">
        <field name="name">mass.confirm.wizard.form</field>
        <field name="model">mass.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Confirm Quotations">
                <sheet>
                    <div class="oe_title">
                        <h1>Mass Confirm Quotations</h1>
                        <p>Filter and confirm multiple draft quotations at once</p>
                    </div>
                    
                    <group string="Filters">
                        <group>
                            <field name="customer_id" options="{'no_create_edit': True}"/>
                            <field name="user_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    
                    <group string="Options">
                        <field name="only_in_stock"/>
                        <field name="send_email"/>
                    </group>
                    
                    <group string="Matching Quotations">
                        <field name="quotation_count" readonly="1"/>
                        <field name="quotation_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm Quotations" 
                            type="object" class="btn-primary" 
                            invisible="quotation_count == 0"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_mass_confirm_wizard" model="ir.actions.act_window">
        <field name="name">Mass Confirm Quotations</field>
        <field name="res_model">mass.confirm.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_mass_confirm_wizard_form"/>
    </record>
</odoo>