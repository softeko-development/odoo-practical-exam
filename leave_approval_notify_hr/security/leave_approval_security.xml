<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_leave_user" model="res.groups">
        <field name="name">Leave User</field>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
    <record id="group_leave_manager" model="res.groups">
        <field name="name">Leave Manager</field>
    </record>
    <record id="group_leave_hr" model="res.groups">
        <field name="name">Leave HR</field>
    </record>

    <!-- Rule for Employees: Own requests -->
    <record id="rule_leave_request_user" model="ir.rule">
        <field name="name">Leave Request: Employee own requests</field>
        <field name="model_id" ref="model_leave_request"/>
        <field name="groups" eval="[(4, ref('group_leave_user'))]"/>
        <field name="domain_force">[('employee_id.user_id.id', '=', user.id)]</field>
    </record>

    <!-- Rule for Managers: Subordinate requests -->
    <record id="rule_leave_request_manager" model="ir.rule">
        <field name="name">Leave Request: Manager subordinate requests</field>
        <field name="model_id" ref="model_leave_request"/>
        <field name="groups" eval="[(4, ref('group_leave_manager'))]"/>
        <field name="domain_force">[('employee_id.parent_id.user_id.id', '=', user.id)]</field>
    </record>

    <!-- Rule for HR: All requests -->
    <record id="rule_leave_request_hr" model="ir.rule">
        <field name="name">Leave Request: HR all requests</field>
        <field name="model_id" ref="model_leave_request"/>
        <field name="groups" eval="[(4, ref('group_leave_hr'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>