
<odoo>
    <record id="view_stock_alert_wizard_form" model="ir.ui.view">
        <field name="name">stock.alert.wizard.form</field>
        <field name="model">stock.alert.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock Alert!">
                <group>
                    <field name="product_id"/>
                    <field name="qty_available"/>
                    <field name="reorder_min_qty"/>
                </group>
                <footer>
                    <button string="OK" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
